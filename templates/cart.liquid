<div class="section cart">
  <div class="container">
    <h1 class="cart__title">{{ 'sections.cart.title' | t }}</h1>

    {%- if cart.item_count > 0 -%}
      <form action="{{ routes.cart_url }}" method="post" novalidate>
        <div class="cart__items">
          {%- for item in cart.items -%}
            <div class="cart-item" data-index="{{ forloop.index }}">
              {%- if item.image -%}
                <img src="{{ item.image | image_url: width: 200 }}" 
                     alt="{{ item.image.alt | escape }}" 
                     class="cart-item__image"
                     loading="lazy">
              {%- endif -%}

              <div class="cart-item__details">
                <a href="{{ item.url }}" class="cart-item__title">{{ item.product.title }}</a>
                
                {%- if item.variant.title != 'Default Title' -%}
                  <div class="cart-item__variant">{{ item.variant.title }}</div>
                {%- endif -%}

                <div class="cart-item__price">{{ item.final_price | money }}</div>
              </div>

              <div class="cart-item__actions">
                <input type="number" 
                       name="updates[]" 
                       value="{{ item.quantity }}" 
                       min="0" 
                       data-index="{{ forloop.index }}"
                       aria-label="{{ 'sections.cart.quantity' | t }}">
                
                <a href="{{ routes.cart_change_url }}?line={{ forloop.index }}&quantity=0" 
                   class="cart-item__remove">
                  {{ 'sections.cart.remove' | t }}
                </a>
              </div>
            </div>
          {%- endfor -%}
        </div>

        <div class="cart__totals">
          <div class="cart__subtotal">
            <strong>{{ 'sections.cart.subtotal' | t }}:</strong> {{ cart.total_price | money }}
          </div>

          <button type="submit" name="update" class="button">
            {{ 'sections.cart.update' | t }}
          </button>

          <button type="submit" name="checkout" class="button button--primary cart__checkout">
            {{ 'sections.cart.checkout' | t }}
          </button>
        </div>
      </form>
    {%- else -%}
      <div class="cart-empty">
        <p>{{ 'sections.cart.empty' | t }}</p>
        <a href="{{ routes.all_products_collection_url }}" class="button">
          {{ 'general.continue_shopping' | t }}
        </a>
      </div>
    {%- endif -%}
  </div>
</div>
